<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <solid android:color="@android:color/transparent" /> <!-- Transparent to not fill the border area -->
            <stroke
                android:width="3dp"
                android:color="@color/purple_500" /> <!-- Define your border color and width here -->
        </shape>
    </item>
    <!-- Solid Shape -->
    <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <solid android:color="@color/squares" />
        </shape>
    </item>
</layer-list>
